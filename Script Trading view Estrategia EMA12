tf = timeframe.period
var tz = str.format('UTC{0}{1}', tz_incr >= 0 ? '+' : '-', math.abs(tz_incr))
is_sesa = math.sign(nz(time(tf, sesa_ses, tz)))
if show_sesa and sesa_range
    get_range(is_sesa, sesa_txt, sesa_css)

